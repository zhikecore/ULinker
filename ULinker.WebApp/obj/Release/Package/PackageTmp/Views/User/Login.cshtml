<body class="login-layout">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <h1>
                                <i class="ace-icon fa fa-leaf green"></i>
                                <span class="red">ULinker</span>
                                <span class="white" id="id-text2">1.0</span>
                            </h1>
                        </div>

                        <div class="space-6"></div>


                        <div class="position-relative">
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header blue lighter bigger">
                                            <i class="ace-icon fa fa-coffee green"></i>
                                            AIDevOps make life better!
                                        </h4>

                                        <div class="space-6"></div>

                                        @using (Html.BeginForm("login", "user", FormMethod.Post, new { id = "loginform" }))
                                        {
                                        <div class="form-group has-feedback">
                                            <label for="username">@LoginResource.Acount</label>
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                                @Html.TextBoxFor(m => m.Account, new { @class = "form-control", style = "maxlength:20;", placeholder = LoginResource.Acount })
                                                @Html.ValidationMessageFor(m => m.Account)
                                            </div>

                                            <span style="color:red;display: none;" class="tips"></span>
                                            <span style="display: none;" class="glyphicon glyphicon-remove form-control-feedback"></span>
                                            <span style="display: none;" class="glyphicon glyphicon-ok form-control-feedback"></span>
                                        </div>

                                        <div class="row">
                                            <div class="col-xs-7">
                                                <div class="form-group has-feedback">
                                                    <label for="idcode-btn">@LoginResource.PhoneValideCode</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><span class="glyphicon glyphicon-qrcode"></span></span>
                                                        @Html.TextBoxFor(m => m.PhoneValideCode, new { @class = "form-control", style = "maxlength:6;", placeholder = LoginResource.PhoneValideCode })
                                                        @Html.ValidationMessageFor(m => m.PhoneValideCode)
                                                    </div>
                                                    <span style="color:red;display: none;" class="tips"></span>
                                                    <span style="display: none;" class="glyphicon glyphicon-remove form-control-feedback"></span>
                                                    <span style="display: none;" class="glyphicon glyphicon-ok form-control-feedback"></span>
                                                </div>
                                            </div>
                                            @*<div class="col-xs-5 text-center" style="padding-top: 26px">
                                                <button type="button" id="loadingButton" class="btn btn-default" autocomplete="off">短信验证码</button>
                                            </div>*@
                                        </div>

                                        <div class="form-group">
                                            <button type="submit" class="form-control btn btn-primary">
                                                <i class="ace-icon fa fa-key"></i>
                                                <span class="bigger-110">登录</span>
                                            </button>
                                        </div>

                                        }

                                    </div><!-- /.widget-main -->

                                    <div class="toolbar clearfix">
                                        @*<div>
                                            <a href="#" data-target="#forgot-box" class="forgot-password-link">
                                                <i class="ace-icon fa fa-arrow-left"></i>
                                                I forgot my password
                                            </a>
                                        </div>

                                        <div>
                                            <a href="#" data-target="#signup-box" class="user-signup-link">
                                                I want to register
                                                <i class="ace-icon fa fa-arrow-right"></i>
                                            </a>
                                        </div>*@
                                    </div>
                                </div><!-- /.widget-body -->
                            </div><!-- /.login-box -->
                        </div><!-- /.position-relative -->



                        <div class="navbar-fixed-top align-right">
                            <br />
                            &nbsp;
                            <a id="btn-login-dark" href="#">Dark</a>
                            &nbsp;
                            <span class="blue">/</span>
                            &nbsp;
                            <a id="btn-login-blur" href="#">Blur</a>
                            &nbsp;
                            <span class="blue">/</span>
                            &nbsp;
                            <a id="btn-login-light" href="#">Light</a>
                            &nbsp; &nbsp; &nbsp;
                        </div>
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.main-content -->
    </div><!-- /.main-container -->
    <!-- basic scripts -->
    <!--[if !IE]> -->
    <script type="text/javascript">
        window.jQuery || document.write("<script src='~/assets/js/jquery.min.js'>" + "<" + "/script>");
    </script>

